<Window x:Class="MediaPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGEditor"
        mc:Ignorable="d"
        Title="MusicPlayer" Height="377" Width="639" Loaded="Window_Loaded">
    <Grid>
        <MediaElement x:Name="mediaElement" HorizontalAlignment="Left" Height="249" Margin="10,10,0,0" VerticalAlignment="Top" Width="611"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="20,287,0,0" VerticalAlignment="Top" Width="601" IsEnabled="False"/>
        <ToggleButton x:Name="toggleButton" Content="Play" HorizontalAlignment="Left" Height="31" Margin="240,310,0,0" VerticalAlignment="Top" Width="110" Checked="toggleButton_Checked" Unchecked="toggleButton_Unchecked"/>

    </Grid>
</Window>
